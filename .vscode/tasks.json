{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start dev server",
      "type": "shell",
      "command": "npm run dev"
    },
    {
      "label": "Start dev server pnpm",
      "type": "shell",
      "command": "pnpm run dev"
    },
    {
      "label": "Start dev server bun",
      "type": "shell",
      "command": "bun --bun run --hot dev",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
